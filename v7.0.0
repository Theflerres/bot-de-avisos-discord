@commands.check(is_user_music_channel) # Garante que o comando √© usado no canal certo
async def bmusica(ctx, *, search: str):
    cursor.execute("SELECT title, drive_link FROM music_cache WHERE title LIKE ?", (f"%{search}%",))
    rows = cursor.fetchall()

    if rows:
        embed = discord.Embed(title=f"üé∂ M√∫sicas encontradas no cache para '{search}':", color=discord.Color.green())
        description = []
        for i, (title, link) in enumerate(rows[:10]): # Limitar a 10 resultados
            description.append(f"{i+1}. **{title}**\n   [Link do Drive]({link})")
        embed.description = "\n".join(description)
        if len(rows) > 10:
            embed.set_footer(text=f"Mostrando 10 de {len(rows)} resultados.")
        return await ctx.send(embed=embed)

    # Se n√£o encontrou no cache, pergunta pelo link
    initial_response_msg = await ctx.send(f"üîç Nenhuma m√∫sica encontrada no cache para '**{search}**'.\n"
                                           "Se desejar adicionar, envie o link completo do YouTube em at√© 60 segundos:")

    def check(msg_response): # Renomeado para evitar conflito com check de comandos
        return msg_response.author == ctx.author and \
               msg_response.channel == ctx.channel and \
               re.match(r"https?://(www\.)?(youtube\.com/watch\?v=|youtu\.be/)", msg_response.content)

    try:
        user_link_message = await bot.wait_for("message", timeout=60.0, check=check)
        youtube_url = user_link_message.content
        
        # Apagar a mensagem do usu√°rio com o link e a pergunta do bot para limpar o chat
        try:
            await user_link_message.delete()
            await initial_response_msg.delete()
        except discord.HTTPException:
            pass # N√£o se preocupe se n√£o conseguir deletar

        # Verificar cache novamente com o link fornecido
        row = cursor.execute("SELECT drive_link, title FROM music_cache WHERE youtube_url=?", (youtube_url,)).fetchone()
        if row:
            drive_link, title = row
            return await ctx.send(f"üîÅ M√∫sica **{title}** j√° est√° no Drive e aprovada (encontrada pelo link direto):\n{drive_link}")
        
        # Se n√£o est√° no cache, processar com aprova√ß√£o
        # Como 'wait_for' n√£o √© uma intera√ß√£o, passamos 'ctx' e o autor
        await process_music_with_approval(ctx, youtube_url, ctx.author)

    except asyncio.TimeoutError:
        await initial_response_msg.edit(content=f"‚è≥ Tempo esgotado para '**{search}**'. Nenhuma URL do YouTube foi enviada.")
    except Exception as e:
        await ctx.send(f"‚ùå Erro ao processar a busca/adi√ß√£o de m√∫sica: {e}")


