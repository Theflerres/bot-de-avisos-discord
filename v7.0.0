@bot.event
async def on_command_error(ctx, error):
    if isinstance(error, commands.CheckFailure):
        if ctx.command.name in ["cmusica", "bmusica"] and not is_user_music_channel(ctx):
            await ctx.send(f"üö´ Este comando de m√∫sica s√≥ pode ser usado no canal <#{USER_MUSIC_CHANNEL_ID}>.")
        elif ctx.command.name in ["adv", "advs", "remove-adv", "remove-all-advs"] and not is_correct_channel(ctx):
             await ctx.send(f"üö´ Este comando de advert√™ncia s√≥ pode ser usado no canal <#{1349002209794195526}>.")
        else:
            await ctx.send("üö´ Voc√™ n√£o tem permiss√£o para usar este comando aqui ou em geral.")
    elif isinstance(error, commands.MissingRequiredArgument):
        await ctx.send(f"üö´ Argumento faltando: `{error.param.name}`. Consulte `!cmds` para o uso correto.")
    elif isinstance(error, commands.CommandNotFound):
        await ctx.send(f"üö´ Comando n√£o encontrado. Digite `!cmds` para ver a lista de comandos.")
    else:
        print(f"Erro no comando {ctx.command}: {error}") # Logar erro no console
        await ctx.send(f"üö´ Ocorreu um erro inesperado ao executar o comando. O desenvolvedor foi notificado (no console).")


# --- NOTIFICA√á√ÉO DE DESLIGAMENTO ---
async def notify_shutdown_async(): # Precisa ser async para enviar mensagem
    if bot_instance:
        for cid in channels_to_notify:
            ch = bot_instance.get_channel(cid)
            if ch:
                try:
                    await ch.send("üî¥ Bot est√° sendo desligado.")
                except Exception as e:
                    print(f"Erro ao notificar desligamento no canal {cid}: {e}")

def shutdown_handler():
    if bot_instance and bot_instance.loop.is_running():
        asyncio.run_coroutine_threadsafe(notify_shutdown_async(), bot_instance.loop)

atexit.register(shutdown_handler)

